# GPS Danger Zone Tracker - Environment Variables Template
# Copy this file to .env and configure your specific settings

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME="GPS Danger Zone Tracker"
APP_VERSION="1.0.0"
APP_DEBUG=false
APP_LOG_LEVEL="INFO"

# =============================================================================
# GPS CONFIGURATION
# =============================================================================
GPS_SOURCE_TYPE="simulation"
GPS_SERIAL_PORT="COM3"
GPS_BAUD_RATE=9600
GPS_TIMEOUT=1
GPS_UPDATE_INTERVAL=1.0
GPS_FILE_PATH="data/sample_track.gpx"
GPS_API_URL=""
GPS_API_KEY=""

# =============================================================================
# ZONE MANAGEMENT
# =============================================================================
ZONES_CHECK_INTERVAL=5.0
ZONES_BUFFER_DISTANCE=10.0
ZONES_UNITS="meters"
ZONES_DEFAULT_RADIUS=100.0

# =============================================================================
# ALERT SYSTEM
# =============================================================================
ALERTS_ENABLED=true
ALERTS_TYPES="desktop,sound"
ALERTS_SOUND_FILE="alerts/warning.wav"
ALERTS_COOLDOWN_PERIOD=60

# Email settings
EMAIL_ENABLED=false
EMAIL_SMTP_SERVER="smtp.gmail.com"
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=""
EMAIL_PASSWORD=""
EMAIL_RECIPIENTS=""

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
DATABASE_TYPE="sqlite"
DATABASE_PATH="data/tracker.db"
DATABASE_BACKUP_INTERVAL=3600

# =============================================================================
# WEB INTERFACE
# =============================================================================
WEB_ENABLED=true
WEB_HOST="localhost"
WEB_PORT=5000
WEB_AUTO_OPEN_BROWSER=true
WEB_SECRET_KEY="your_secret_key_here"

# =============================================================================
# MAPPING SETTINGS
# =============================================================================
MAP_DEFAULT_ZOOM=15
MAP_TILE_SOURCE="OpenStreetMap"
MAP_CACHE_TILES=true
MAP_OFFLINE_MODE=false

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_FILE="logs/gps_tracker.log"
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# =============================================================================
# PRIVACY SETTINGS
# =============================================================================
PRIVACY_STORE_LOCATION_HISTORY=true
PRIVACY_DATA_RETENTION_DAYS=30
PRIVACY_ANONYMOUS_MODE=false

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DEV_MODE=false
SIMULATION_BASE_LAT=40.7128
SIMULATION_BASE_LON=-74.0060
SIMULATION_RADIUS=0.01

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================
WEATHER_API_KEY=""
WEATHER_API_URL="https://api.openweathermap.org/data/2.5/weather"
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""
EMERGENCY_CONTACT_PHONE=""

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
ALLOW_CONFIG_OVERRIDE=true
REQUIRE_AUTH_FOR_WEB=false
WEB_AUTH_USERNAME=""
WEB_AUTH_PASSWORD=""